    <tr>
      <td class="ellipsis"><a class="share" href="{{ url_for('share_note', uuid=note.uuid)}}">ðŸ”—</a></td> 
      <td class="ellipsis"><a href="{{ url_for('share_note', uuid=note.uuid)}}"><span>{{ note.body }}</span></a></td> 
      <td class="ellipsis"><span>â€” {{ note.byline }}</span></td>
