    <option value="4">Georgia</option>  
    <option value="5">Trebuchet MS</option>
 </select>
 </td>
 </tr>
 </table>

<table class='u-full-width' >
  <thead>
    <tr>
      <th>Share URL</th>
      <th>Message</th>
      <th>From</th>
      <th>Archive?</th>
    </tr>
  </thead>
  <tbody>
  {% for note in notes %}
    <tr>
      <td width='50px'><pre class='note'><strong><a class="share" href="{{ url_for('share_note', uuid=note.uuid)}}">ðŸ”—</a></strong></pre>
